<% renderMenu = (items) => %>
<ul class="menu">
  <% for item in items: %>
  <li<% if item.state: %> class="selected"<% end %>>
  <% if item.state != 'current': %>
  <a href="<%= item.url %>"><%= item.title %></a>
  <% else: %>
  <span><%= item.title %></span>
  <% end %>
  <% if item.children: %>
  <%- renderMenu(item.children) %>
  <% end %>
  </li>
  <% end %>
</ul>
<% end %>
<%= renderMenu @menuItems %>